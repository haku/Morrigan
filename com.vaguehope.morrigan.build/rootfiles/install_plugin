#!/bin/bash
set -eu

print_help() {
  echo "Usage: $0 <plugin>"
  echo "Available plugins:"
  echo "  sshui"
  echo "  dlna"
  exit 0
}

if [ "$#" -lt 1 ] || [ "$#" -gt 1 ] ; then print_help ; fi

arg_name="$1"
if [ "$arg_name" == "sshui" ] ; then
  bname="com.vaguehope.morrigan.sshui"
elif [ "$arg_name" == "dlna" ] ; then
  bname="com.vaguehope.morrigan.dlna"
else
  echo "Unknown plugin: $arg_name"
  print_help
fi

mndir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
echo "Morrigan: $mndir"
echo "Bundle: $bname"

rjarname="$(curl --silent "http://karasu.vaguehope.com/plugins.rhtml" | grep "$bname" | head -n 1)"
if [ -z "$rjarname" ] ; then
  echo "Not found in plugin list: $bname"
  exit 1
fi

jarurl="http://karasu.vaguehope.com/$rjarname"
mkdir -p "$mndir/tmp/"
jartmp="$mndir/tmp/$rjarname"
echo -e "Downloading:\n  $jarurl\n  --> $jartmp"
curl "$jarurl" -o "$jartmp"

ljarname="$bname.jar"
jarlocal="$mndir/plugins/$ljarname"
echo -e "Moveing:\n  $jartmp\n  --> $jarlocal"
mv "$jartmp" "$jarlocal"

conf="$mndir/configuration/config.ini"
echo "Config: $conf"

if ! [ -e "$conf" ] ; then
  echo "File not found: $conf"
  exit 1
fi

if ! grep -q "$ljarname" "$conf" ; then
  sed "-i.$(date +'%Y%m%d-%H%M%S').bak" "/^osgi.bundles=/s/$/,reference\\\\:file\\\\:$ljarname@4\\\\:start/" "$conf"
else
  echo "$conf already contains $ljarname."
fi

echo "done."
